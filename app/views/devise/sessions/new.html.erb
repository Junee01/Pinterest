<div class="col-md-6 col-md-offset-3">
  <div class="row">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2>로그인하기</h2>
      </div>

      <div class="panel-body">
      	<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
				  <div class="form-inputs">
				  	<div class="form-group">
				  		<%= f.input :email, label: "이메일 주소", placeholder: "이메일 주소를 입력해주세요.", required: false, autofocus: true, input_html: { class: 'form-control' } %>
				  	</div>
				    <div class="form-group">
				    	<%= f.input :password, label: "비밀번호 입력", placeholder: "비밀번호를 입력해주세요.", required: false, input_html: { class: 'form-control' } %>
				    </div>
				    	<% if devise_mapping.rememberable? -%>
				    		<div class="form-group">
				    			<%= f.check_box :remember_me %> <%= f.label :remember_me, label: "비밀번호 기억하기" %>
				    		</div>
				    	<% end -%>
				  </div>

				  <div class="form-actions">
				    <%= f.button :submit, "로그인 하기", class: "btn btn-primary" %>
				  </div>
				<% end %>

				<%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>

		