<%= div_for(comment) do %>
	<div class="comments_wrapper clearfix">
		<div class="pull-left">
			<p class="lead"><%= comment.body %></p>
			<p>
				(<%= time_ago_in_words(comment.created_at) %>, <strong><%= comment.user.name %></strong>)
			</p>
		</div>

		<div class="btn-group pull-right">
			<% if comment.user == current_user -%>
				<%= link_to 'Destroy', comment, method: :delete, data: { confirm: '정말로 삭제하시겠습니까?' }, class: "btn btn-sm btn-default" %>
			<% end %>
		</div>
	</div>
<% end %>